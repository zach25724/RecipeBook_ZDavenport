<UserControl x:Class="RecipeApp.Views.AddRecipeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RecipeApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="597" d:DesignWidth="1392">

    <UserControl.Resources>
        <DataTemplate x:Key="ListTemplate">
            <TextBlock FontSize="20" Foreground="Black" Text="{Binding}" TextWrapping="Wrap"/>
        </DataTemplate>
    </UserControl.Resources>

    <Grid x:Name="RecipeContainer" Background="#FF87CAEA">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!---RecipeName, PrepTime, and CookTime-->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.ColumnSpan="8" VerticalAlignment="Top" HorizontalAlignment="Left">
            <TextBlock Text="Recipe Name:" FontSize="20" Margin="20,25,10,20"/>
            <TextBox Name="RecipeNameTextBox" Margin="0,20" MinWidth="500" MaxWidth="500" MaxHeight="35" FontSize="15" Padding="5" 
                     Text="{Binding Path=RecipeName, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}"/>
            <TextBlock Text="Prep Time:" FontSize="20" Margin="20,25,10,20"/>
            <TextBox Margin="0,20" FontSize="15" MinWidth="50" MaxWidth="50" MinHeight="35" MaxHeight="35" Padding="5" Text="{Binding Path=PrepTime, Mode=OneWayToSource}"/>
            <TextBlock Text="Cook Time:" FontSize="20" Margin="20,25,10,20"/>
            <TextBox Margin="0,20" FontSize="15" MinWidth="50" MaxWidth="50" MinHeight="35" MaxHeight="35" Padding="5" Text="{Binding Path=CookTime, Mode=OneWayToSource}"/>
        </StackPanel>

        <!--Steps-->
        <DockPanel Grid.Row="1" Grid.RowSpan="4" Grid.ColumnSpan="4" >
            <TextBlock Text="Steps:" VerticalAlignment="Top" FontSize="20" Margin="20,10,25,0"/>
            <Border BorderBrush="Black" Margin="10" BorderThickness="1">
                <ListBox Name="StepList" Background="#FF87CAEA" ItemsSource="{Binding Path=Steps}" ItemTemplate="{StaticResource ResourceKey=ListTemplate}"
                         BorderThickness="0" ScrollViewer.HorizontalScrollBarVisibility="Disabled" SelectionChanged="StepList_SelectionChanged" />
            </Border>
        </DockPanel>
        <StackPanel Orientation="Vertical" Grid.Row="5" Grid.RowSpan="2" Grid.ColumnSpan="4">
            <TextBox x:Name="StepTextBox" HorizontalAlignment="Stretch" Margin="110,0,10,0" MinWidth="195" MaxHeight="100" TextWrapping="Wrap" 
                     MinHeight="100" FontSize="15" Padding="5" Text="{Binding Path=Step, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}" KeyDown="StepTextBox_KeyDown"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="110,5">
                <Button Name="AddStepButton" Content="Add" Height="30" Width="80" Command="{Binding AddStepCommand}" CommandParameter="{Binding ElementName=StepTextBox}" />
                <Button Name="UpdateStepButton" Content="Update" Height="30" Width="80" Margin="16,0,0,0" Command="{Binding UpdateStepCommand}" 
                        CommandParameter="{Binding ElementName=StepList, Path=SelectedItem}"/>
                <Button Name="DeleteStepButton" Content="Delete" Height="30" Width="80" Margin="16,0,0,0" Command="{Binding DeleteStepCommand}" 
                        CommandParameter="{Binding ElementName=StepList, Path=SelectedItem}"/>
            </StackPanel>
        </StackPanel>
        
        <!--Ingredients-->
        <DockPanel Grid.Row="1" Grid.Column="4" Grid.RowSpan="4" Grid.ColumnSpan="3" >
            <TextBlock Text="Ingredients:" VerticalAlignment="Top" FontSize="20" Margin="20,10,25,0"/>
            <Border BorderBrush="Black" Margin="10" BorderThickness="1">
                <ListBox Name="IngredientList" Background="#FF87CAEA" ItemsSource="{Binding Path=Ingredients}" ItemTemplate="{StaticResource ResourceKey=ListTemplate}"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled" BorderThickness="0"/>
            </Border>
        </DockPanel>
        <StackPanel Orientation="Vertical" Grid.Column="4" Grid.Row="5" Grid.ColumnSpan="3">
            <TextBox Name="IngredientTextBox" HorizontalAlignment="Stretch" Margin="160,0,10,0" MinWidth="195" MaxHeight="35" MinHeight="35" FontSize="15"
                        Padding="5" Text="{Binding Path=Ingredient, Mode=OneWayToSource, UpdateSourceTrigger=PropertyChanged}" KeyDown="IngredientTextBox_KeyDown" />
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="160,5">
                <Button Name="AddIngredientButton" Content="Add" Height="30" Width="80" Command="{Binding AddIngredientCommand}" CommandParameter="{Binding ElementName=IngredientTextBox}" />
                <Button Name="DeleteIngredientButton" Content="Delete" Height="30" Width="80" Margin="16,0,0,0" Command="{Binding DeleteIngredientCommand}"
                        CommandParameter="{Binding ElementName=IngredientList, Path=SelectedItem}"/>
            </StackPanel>
        </StackPanel>

        <!--Save / Cancel Buttons-->
        <StackPanel Orientation="Horizontal" Grid.Row="7" Grid.ColumnSpan="2" HorizontalAlignment="Center">
            <Button Name="SaveRecipe" Content="Save Recipe" Height="30" Width="100" Margin="10" Command="{Binding SaveRecipeCommand}"/>
            <Button Name="Cancel" Content="Cancel" Height="30" Width="100" Margin="10" Command="{Binding CancelRecipeCommand}" />
        </StackPanel>
        

    </Grid>
</UserControl>
